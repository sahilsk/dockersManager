
<% include ../../layouts/dashboard_layout_top %>

<h1> Edit Host </h1>
<div class="uploaderWrapper">

	<form method="post" action="/hosts/<%=host.id%>/update" >

		<input type="hidden" name="id"  id="id" value="<%= host.id %>" />


		<label> Name </label>
		<input type="text" name="hostname"  id="hostname"  placeholder="name"  value="<%= host.name %>"/>
		<br/> <br/>

		<label> IP </label>
		<input type="text" name="ip"  id="ip" placeholder="ip address eg. 127.0.0.1"  value="<%= host.ip %>"/>
		<input type="text" name="port"  id="port" placeholder="port eg.8080" size="10" value="<%= host.port %>" />
		<br/> <br/>


		<input type="submit" value="Update Host" class="btn lrg" />
	</form>

</div>

<br/>
<% include ../../layouts/dashboard_layout_bottom %>
