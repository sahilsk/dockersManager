
<div class="imageWrapper">
	
	<div class="dockerImageIcon">

		<div style="background-color: #FFF; font-size:100%; font-weight:bold; height:20px; margin-top:40px; padding-top:1px;color: #333;text-shadow: 1px 1px 1px #999;opacity: 0.9; text-align:center;"> 
			Docker Image <br> 
		</div>

	</div>

	<div class="dockerImageInfo key_val">
		<br/>
		<label> Repository : </label>
		<span>
			<% if( imgInfo.repository.length === 0 ){ %>
				 ---
			<%} else {%>
				<%= imgInfo.repository %>
			<%} %>
		 </span> <br/>
		
		<label> ID : </label>
		<span> <%= imgInfo.id %> </span> <br/>



		<label> Built Date : </label>
		<span> <%= new Date( parseInt(imgInfo.created) ) %> </span>

	</div>

	<div class="dockerImageAction">
		<br/>
		<ul>
			<% if( !( typeof page !== 'undefined' && page === "inspect_image" ) ) { %>
					<li> 
						<form action="/hosts/<%= imgInfo.runningOn.id %>/dockers/<%= imgInfo.id %>/inspect" method="GET">
							<input type="hidden" name="repository"	value="<% if( imgInfo.repository){ %><%= (imgInfo.repository) %><% } %>" />					
							<input type="hidden" name='created'  value="<%=imgInfo.created %>" />
							<button  title="Inspect">   &equiv; Inspect  </button>		
						</form>

					</li>

			<% }else{ %>

					<li> 

						<form action="/hosts/<%= imgInfo.runningOn.id %>/dockers/<%= imgInfo.id %>/containers" method="GET">
							<input type="hidden" name="repository"	value="<% if( imgInfo.repository){ %><%=imgInfo.repository %><% } %>" />					
							<input type="hidden" name='created'  value="<%=imgInfo.created %>" />
							<button  title="Inspect">   &equiv; List Containers  </button>		
						</form>

					</li>

			<% } %>

			<% if(  typeof page !== 'undefined' && page === "image_page" ){ %>

					<li>
						 <a href="/dockers/<%=id%>/containers?repository=<%= imgInfo.name %>&created=<%= imgInfo.created %> ">List Containers </a>
					</li>
			<% } %>

			<li class="delete"> 
				<form action="/hosts/<%= imgInfo.runningOn.id %>/dockers/<%= imgInfo.id %>/delete" method="POST">

					<input type="hidden" name="repository"	value="<% if( imgInfo.Repository){ %><%= imgInfo.Repository %><% } %>" />

					<button  title="remove"> &cross; Delete  </button>
					
				</form>				


			</li>

		</ul>
	</div>

	<div class="clr"> </div>

</div>


 <hr style="
   
    color: rgb(216, 226, 226);
    border-color: rgb(179, 93, 178);
    border-width: 1px;
    border-style: solid;

    border-bottom: 5px solid rgb(143, 20, 143);
    box-shadow: 1px 1px 1px #9E9797;

"/>